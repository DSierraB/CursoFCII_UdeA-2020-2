#include <stdio.h>
#include <math.h>
#include <iostream>
#include <string>

#include "CuadraticClass.h"

using namespace std;

//Inicializacion variables
CuadraticClass::CuadraticClass(){
  a=0;
  b=0;
  c=0;
}

void CuadraticClass::DisplayMessage(){
  cout<<"Con este código encontraremos las raíces de un polinomio cuadrático del tipo ax^2+bx+c";
}
void CuadraticClass::SetValues(){
  cout << "Ingrese los valores de a, b y c para calcular las raices\n";
  cout<< "a= ";
  cin>> a;
  cout<<"b= ";
  cin>> b;
  cout<<"c= ";
  cin>> c;
  cout << "Se encontrarán las raices para el polinomio: " << a <<"x^2 + "<< b<< "x + "<<c;

}

float CuadraticClass::Discriminant(float a, float b, float c){
  float D;
  D= pow(b,2)-(4*a*c);
  return D;
}

float CuadraticClass::Root(float a, float b, float c){
  float D;
  D=Discriminant(a, b, c);
  if(D>=0){
    float x1,x2;
    x1=(-b + sqrt(D)) / (2*a);
    x2=(-b - sqrt(D)) / (2*a);
    return x1, x2;
  }
  else if (D<0){
    float x11,x12,x21,x22;
    x11= (-b) / (2*a);
    x12= (sqrt(-D)) / (2*a);
    x21= (-b) / (2*a);
    x22= (- sqrt(-D)) / (2*a);
    return x11,x12,x21,x22;
    }
  else{cout<<"Esto no tiene mucho sentido, por favor contacte el soporte";}
}

void CuadraticClass::Result(){
  float D;
  D=Discriminant(float a, float b, float c);
  if(D>=0){
    float x1,x2;
    x1,x2=Root(a,b,c);
    cout<<"Las raices son: x1= "<< x1 <<" x2= "<<x2;
  }
  else{
    float x11,x12,x21,x22;
    x11,x12,x21,x22 = Root(float a, float b, float c);
    cout<<"Las raices son: x1= "<< x11 <<" + "<<x12<<"i\n";
    cout<<" x2= "<<x21<<" + "<<x22<<"i\n";
  }

}
